.span9
  .talk_event
    .header
      .title
        - if not user.is_anonymous and item.talk.speaker != user
          .grid1
            %a{href:"{{item.talk.get_absolute_url}}"}
              {{ item.talk.name|truncatechars:48 }}
            %br by {{ item.talk.speaker.user.get_full_name }}

          .grid2
            .btn-group
              - if user.get_profile in item.attendees.all
                - if user.get_profile not in item.talk.endorsements.all
                  %a.btn.btn-warning{href:"/talk/{{item.talk.id}}/endorse?last={{last}}"}
                    %i.icon-thumbs-up
                    Endorse
                - else
                  %a.btn.disabled.btn-warning
                    %i.icon-thumbs-up
                    Endorsed
                %a.btn.btn-warning{href:"/talk_event/{{item.id}}/attend?last={{last}}"}
                  %i.icon-ban-circle
                  Cancel
              - else
                %a.btn.btn-warning{href:"/talk_event/{{item.id}}/attend?last={{last}}"}
                  %i.icon-calendar
                  Attend

        - else
          %div
            %a{href:"{{item.talk.get_absolute_url}}"}
              {{ item.talk.name|truncatechars:68 }}
            %br by {{ item.talk.speaker.user.get_full_name }}

      .location
        .grid1
          %a{href:"{{ item.event.get_absolute_url }}"}
            at {{ item.event.owner.name }}
          %br in {{ item.event.location.city }}, {{ item.event.location.state }}
        .grid2
          {{ item.date.date }}
          %br {{ item.date.time }}

    .description
      .tag-cloud.pull-left
        - for tag in item.talk.tags.all
          .label.label-info {{ tag.name }}

      %span {{ item.talk.abstract|truncatechars:240 }}
      .clearfix

    .clearfix
