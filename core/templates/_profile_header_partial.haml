.row
  .span3
    .well.picture
      - if speaker.photo
        %img{src:"{{STATIC_URL}}{{ speaker.photo}}"}
      - else
        %i.icon-user

  .span9
    .row
      .span6
        %h2 {{ speaker.user.get_full_name }}

      - if not user.is_anonymous and speaker == user.get_profile
        .span3
          .edit-buttons.btn-group
            - if speaker.published
              .btn.btn-warning{href:"/profile/archive"}
                %i.icon-ban-circle
                Hide
            - else
              %a.btn.btn-warning{href:"/profile/publish"}
                %i.icon-ok
                Publish

            %a.btn.btn-warning{href:"/profile/edit"}
              %i.icon-pencil
              Edit

            %a.add-talk.btn.btn-warning{href:"#add-talk-popup"}
              %i.icon-plus
              Talk

            %a.add-event.btn.btn-warning{href:"/event/new"}
              %i.icon-plus
              Event

    %hr

    .row
      .span9 {{ speaker.about_me }}

.features
  .row
    .span3
      %h2 Known for
      - if speaker.tags.all
        %ul.expert-area
          - for tag in speaker.tags.all
            %li.label.label-info {{tag}}
      - else
        No User Tags

    .span3
      %h2 Links
      - if speaker.userlink_set.all
        - for link in speaker.userlink_set.all
          %p
            %a{href:"{{link.url_target}}", target:"_blank"}
              My {{ link.type_name|title }} Account
      - else
        No Outside Links

    .span3
      %h2 Followers
      - if followers
        - for profile in followers
          %p
            %a{href:"/speaker/{{profile.user.username}}"}
              {{ profile.user.get_full_name }}
      - else
        No Followers

    .span3
      %h2 Following
      - if following
        - for profile in following
          %p
            %a{href:"/speaker/{{profile.user.username}}"}
              {{ profile.user.get_full_name }}
      - else
        Not Following Anyone
