.features
  .row
    .span9
      %h2 Favorite Talks
      - if talks
        %ul.basic-item-list
          - for item in talks
            %li
              %a{href:"{{item.get_absolute_url}}"}
                {{ item.name|truncatechars:30 }}
      - else
        No talks.

    .span9{style:"margin-top: 40px"}
      %h2 Talks Attended
      - if attended
        %ul.basic-item-list
          - for item in attended
            %li
              %a{href:"{{item.talk.get_absolute_url}}"}
                {{ item.talk.name|truncatechars:30 }}
      - else
        No talks attended.

    .span9{style:"margin-top: 40px"}
      %h2 Events Attended
      - if events
        %ul.basic-item-list
          - for item in events
            %li
              %a{href:"{{item.get_absolute_url}}"}
                {{ item.name|truncatechars:30 }}
      - else
        No events.

- if current
  .row
    .span9
      %h2 Talks Happening Now

      .row
        - for item in current
          - include 'talkevents/_talk_event_span9_detail_partial.haml'

- if upcoming
  .row
    .span9
      %h2 Upcoming Speaking Engagements

      .row
        - for item in upcoming
          - include 'talkevents/_talk_event_span9_detail_partial.haml'
