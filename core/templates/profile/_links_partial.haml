.row
  .span3
    %h2 Links
    - if profile.links.all
      - for link in profile.links.all
        %p
          %a{href:"{{link.url_target}}", target:"_blank"}
            My {{ link.type_name|title }} Account
    - else
      No Outside Links

- if user == profile.user
  .row
    .edit-links
      .span3
        %form.profile-link-form{action:"/profile/edit/link/new/", method:"POST", enctype:"multipart/form-data"}
          - csrf_token
          {{ link_form.type }}
          {{ link_form.url }}

          %input.btn.btn-warning{type:"submit", value:"Add New Link"}
