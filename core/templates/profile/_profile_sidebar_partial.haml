.row 
  .span3{style:"margin-top: 40px"}
    %h2 My Talks
    - if talks
      %ul.basic-item-list
        - for item in talks
          %li
            %a{href:"{{item.get_absolute_url}}"}
              {{ item.name|truncatechars:30 }}
    - else
      No talks.

  .span3{style:"margin-top: 40px"}
    %h2 My Events
    - if events
      %ul.basic-item-list
        - for item in events
          %li
            %a{href:"{{item.get_absolute_url}}"}
              {{ item.name|truncatechars:30 }}
    - else
      No events.

