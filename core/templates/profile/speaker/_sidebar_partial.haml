.row
  .span3
    {% include 'profile/_tags_partial.haml' %}
  .span3{style:"margin-top: 40px"}
    {% include 'profile/_links_partial.haml' %}

  {% include 'profile/_followers_list_partial.haml' %}

  .span3{style:"margin-top: 40px"}
    %h2 My Talks
    - if talks
      %ul.basic-item-list
        - for item in talks
          %li
            %a{href:"{{item.get_absolute_url}}"}
              {{ item.name|truncatechars:30 }}
    - else
      No talks.

  .span3{style:"margin-top: 40px"}
    %h2 Events
    - if events
      %ul.basic-item-list
        - for item in events
          %li
            %a{href:"{{item.get_absolute_url}}"}
              {{ item|truncatechars:30 }}
    - else
      No events.

  .span3{style:"margin-top: 40px"}
    %h2 Past Talks
    - if past
      %ul.basic-item-list
        - for item in past
          %li
            %a{href:"{{item.talk.get_absolute_url}}"}
              {{ item.talk.name|truncatechars:30 }}
    - else
      No previous talks.

  .span3{style:"margin-top: 40px"}
    %h2 Attended
    - if attended
      %ul.basic-item-list
        - for item in attended
          %li
            %a{href:"{{item.talk.get_absolute_url}}"}
              {{ item.talk.name|truncatechars:30 }}
    - else
      No talks attended.
