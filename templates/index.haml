- extends 'base.haml'

- block 'content-container'
  #index-container

  - include 'handlebars/index.haml'
  - include 'handlebars/talk_thumbnail.haml'

- block 'scripts'
  %script{type:"text/javascript"}
    talks = new SpkrBar.Collections.Talks({{talks|safe}})

    var indexPage = new SpkrBar.Views.IndexPage({
        collection: talks
    });

    $('#index-container').html(indexPage.render().el);
