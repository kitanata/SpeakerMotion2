- extends 'blog/blog_base.haml'
- load markup

- block 'blog_content'
  %h3 Recent Posts

  - if recent_posts
    - for item in recent_posts
      .well.post
        .name
          %a{href:"{{item.get_absolute_url}}"}
            {{ item.name }}
        .date {{ item.date.date }}
        .time {{ item.date.time }}
        .content {{ item.content|markdown|truncatewords_html:90 }}
