- extends 'blog/blog_base.haml'

- block 'blog_content'
  %h3 Recent Posts

  - if recent_posts
    - for item in recent_posts
      .well.post
        .name
          %a{href:"{{item.post.get_absolute_url}}"}
            {{ item.post.name }}
        .date {{ item.post.date.date }}
        .time {{ item.post.date.time }}
        .content {{ item.content|safe|truncatewords_html:90 }}
