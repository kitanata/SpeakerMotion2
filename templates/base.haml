%html{lang:"en"}
  %head
    %meta{charset:"utf-8"}
    {% if title %}
      %title SpkrBar.com | {{title}}
    {% else %}
      %title SpkrBar.com | The world's first post-event content management platform.
    {% endif %}
    %meta{name:"viewport", content:"width=device-width, initial-scale=1.0"}
    %meta{name:"description", content:"What happens to the content from your event after its over? Did you know you could use it to attract new attendees and monitor trends? Click here to learn more."}
    %meta{name:"author", content:"Agile Hog LLC"}

    - css_asset_tag 'vendor/css/style.css'
    - css_asset_tag 'css/style.css'

    - js_asset_tag 'vendor/js/script.js'

    - include "feedback/header.html"
    
    - block 'head'

    %link{rel:"apple-touch-icon-precomposed", sizes:"144x144", href:"../assets/ico/apple-touch-icon-144-precomposed.png"}
    %link{rel:"apple-touch-icon-precomposed", sizes:"114x114", href:"../assets/ico/apple-touch-icon-114-precomposed.png"}
