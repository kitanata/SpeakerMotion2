{% verbatim %}
  %script#talk-detail-templ{type:"text/x-handlebars-template"}
    .subnav
      .row
        .span10
          %h2
            {{#if numEndorsements }}
            {{ numEndorsements }} <i class="icon-thumbs-up"></i>
            {{/if}}
            {{ name }}
        .span2
          .nav.btn-group.pull-right
            {{#if userLoggedIn}}
              {{#if userOwnsContent}}
                {{#if published }}
                  %button.publish-talk.btn.btn-warning{data-toggle:"tooltip", data-original-title:"Hide Talk"}
                    %i.icon-eye-close
                {{else}}
                  %button.publish-talk.btn.btn-warning{data-toggle:"tooltip", data-original-title:"Publish Talk"}
                    %i.icon-eye-open
                {{/if}}
                  %button#create-engagement.btn.btn-warning{data-toggle:"tooltip", data-original-title:"Create Engagement"}
                    %i.icon-bullhorn
                  %button#edit-talk.btn.btn-warning{data-toggle:"tooltip", data-original-title:"Edit Talk"}
                    %i.icon-pencil
                  %button#delete-talk.btn.btn-warning{data-toggle:"tooltip", data-original-title:"Delete Talk"}
                    %i.icon-trash
              {{else}}
                {{#if userEndorsed}}
                  %a.btn.btn-warning{href:"/talk/{{talk.id}}/endorse?last={{last}}"}
                    %i.icon-thumbs-up
                    Endorse
                {{else}}
                  %a.btn.disabled.btn-warning
                    %i.icon-thumbs-up
                    Endorsed
                {{/if}}
                {{#if userRated}}
                  %a.btn.btn-warning.rate-talk{href:"#rate-talk-popup", data-toggle:"tooltip", data-original-title:"Rate this talk."}
                    %i.icon-legal
                    Rate
                {{else}}
                  %a.btn.disabled.btn-warning
                    %i.icon-legal
                    Rated
                {{/if}}
              {{/if}}
            {{/if}}

    .content-container
      #talk
        .talk-header
          .row.buffer
            .span3
              .picture.well
                {{#if photo}}
                  %img{src:"/media/{{photo}}"}
                {{else}}
                  %i.icon-user.photo-placeholder-large
                {{/if}}

                .about
                  %h4
                    %a{href:"{{speakerUrl}}"}
                      {{ speakerName }}

            .span9
              .talk-detail
                %h3 Abstract
                %p {{ abstract }}

        .row
          .span3
            .row
              .span3
                #talk-tags
                  {{#if showTags}}
                    %h3 Topics
                  {{/if}}

                  {{#if tags}}
                    %ul.expert-area
                      {{#if userOwnsContent}}
                        {{#each tags}}
                          %li.tag.label.label-info{data-id:"{{id}}"}
                            {{tag}}
                            %i.delete-talk-tag.icon-remove.pull-right{data-id:"{{id}}"}
                        {{/each}}
                      {{else}}
                        {{#each tags}}
                          %li.tag.label.label-info{data-id:"{{id}}"}
                            {{tag}}
                        {{/each}}
                      {{/if}}
                  {{/if}}

                  {{#if userOwnsContent}}
                      %input#new-talk-tag-name{name:"tag", type:"text", placeholder:"My Tag"}
                      %input.add-talk-tag.btn.btn-warning{type:"submit", value:"Tag this talk"}
                  {{/if}}

              .span3
                #talk-links
                  {{#if showLinks}}
                    %h3 Links
                  {{/if}}

                  {{#if userOwnsContent}}
                    {{#each links}}
                      %p.talk-link{data-id:"{{id}}"}
                        %a{href:"{{url}}", target:"_blank"}
                          My {{ name }}
                        %i.delete-talk-link.icon-remove.pull-right{data-id:"{{id}}"}
                    {{/each}}
                  {{else}}
                    {{#each links}}
                      %p.talk-link{data-id:"{{id}}"}
                        %a{href:"{{url}}", target:"_blank"}
                          My {{ name }}
                    {{/each}}
                  {{/if}}

                  {{#if userOwnsContent}}
                    .edit-links
                      %input#new-talk-link-name{type:"text", placeholder:"Link Name"}
                      %input#new-talk-link-url{type:"text", placeholder:"http://"}
                      %input.add-talk-link.btn.btn-warning{type:"submit", value:"Add New Link"}
                  {{/if}}

          .span9
            .row
              .span4
                .row
                  .span2
                    %h3 Slides

                  {{#if userOwnsContent}}
                    .span2
                      %button#add-slides.btn.btn-warning.link-slides.pull-right Add Slides
                  {{/if}}

                .row
                  .span4
                    %hr

                .row
                  {{#if slides}}
                    {{#each slides}}
                      .span4
                        .media-container
                          .media-header
                            %button.btn.pull-right.delete-slide{data-id:"{{id}}"}
                              %i.icon-remove
                          .media-embed
                            {{{embed_code}}}
                    {{/each}}
                  {{else}}
                    .span4
                      No slides available.
                  {{/if}}

              .span4.offset1
                .row
                  .span2
                    %h3 Videos

                  {{#if userOwnsContent}}
                    .span2
                      %button#add-videos.btn.btn-warning.link-video.pull-right Add Videos
                  {{/if}}

                .row
                  .span4
                    %hr
                
                .row
                  {{#if videos}}
                    {{#each videos}}
                      .span4
                        .media-container
                          .media-header
                            %button.btn.pull-right.delete-video{data-id:"{{id}}"}
                              %i.icon-remove
                          .media-embed
                            {{{embed_code}}}
                    {{/each}}
                  {{else}}
                    .span4
                      No videos available.
                  {{/if}}

            .row{style:"margin-top:40px"}
              .span9
                %h3 Speaking Engagements
                %hr

              .span9
                #engagement-list-region

            .row{style:"margin-top:40px"}
              .span9
                .comments
                  %h3 Comments
                  %hr

                  {{#if userLoggedIn }}
                    %form.add-comment-form{action:"/talk/{{talk.id}}/comment/new", method:"POST"}
                      %textarea{name:'comment', placeholder:"Add your comment..."}
                      %input.btn.btn-warning{type:"submit", value:"Submit Comment"}
                  {{/if}}

                  {{#if comments}}
                    %ul
                      - for comment in talk.talkcomment_set.all
                        %li
                          %h4 {{comment.commenter.get_full_name}} said...
                          %p {{comment.comment}}
                  {{else}}
                    No comments yet.
                  {{/if}}

                  {{#unless userLoggedIn}}
                    .login-to-comment{style:"margin-top:20px;"}
                      %a.btn.btn-warning{href:"/login"} Login to comment
                  {{/unless}}
{% endverbatim %}