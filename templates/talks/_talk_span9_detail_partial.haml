.span9
  .talk_event
    .header
      .title
        %a{href:"{{item.get_absolute_url}}"}
          {{ item.name|truncatechars:40 }}
    .description
      - if item.tags.all
        - for tag in item.tags.all
          .label.label-info {{ tag.name }}

      .abstract {{ item.abstract|truncatechars:240 }}
    .clearfix
