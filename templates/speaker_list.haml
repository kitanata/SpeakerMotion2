- extends 'base.haml'

- block 'content-container'
  #speaker-list-container

  - include 'handlebars/speaker_list.haml'
  - include 'handlebars/speaker_detail.haml'

- block 'scripts'
  %script{type:"text/javascript"}
    var speakers = new SpkrBar.Collections.Speakers({{speakers|safe}})

    var speakerListView = new SpkrBar.Views.SpeakerList({collection:speakers});
    $('#speaker-list-container').html(speakerListView.render().el);
