.navbar.pull-right{style="margin-top:10px"}
  .btn-group.talk-links
    - if user == event.talk.speaker
        - if event.talk.published
          %a.btn.btn-warning{href:"/talk/{{event.talk.id}}/event/new", data-toggle:"tooltip", data-original-title:"Add New Event"}
            %i.icon-plus

        %a.btn.btn-warning{href:"/event/{{event.id}}/edit", data-toggle:"tooltip", data-original-title:"Edit This Event"}
          %i.icon-pencil

        <a class="btn btn-warning delete-event" href="#delete-event-popup"
          data-toggle="tooltip"
          data-original-title="Delete This Event"
          data-name="{{event.talk.name}}"
          data-date="{{event.date.date}}"
          data-time="{{event.date.time}}"
          data-location="{{event.location.name}}"
          data-id="{{event.id}}">
            <i class="icon-trash"></i>
        </a>
    - elif not user.is_anonymous
      - if not user_endorsed
        %a.btn.btn-warning{href:"/talk/{{event.talk.id}}/endorse?last={{last}}"}
          %i.icon-thumbs-up
          Endorse

<!-- This contains the hidden content for inline calls -->
%div{style:'display:none'}
  #delete-event-popup{style:"background-color:white; padding: 40px;"}
    %h2 Delete This Event?
    %h3.delete-event-name
    %h4.delete-event-date
    %h4.delete-event-time
    %h4.delete-event-location
    %div{style:"font-size: 18px;margin-top: 40px;"}
      %p Are you sure you want to delete this event?
      %p <b>This operation cannot be undone.</b>

    %a.delete-confirm-link.btn.btn-danger{href:"#", style:"margin-top: 20px;"} Yes. Delete this event
