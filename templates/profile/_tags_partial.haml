.row
  .span3
    - if topic_title
      %h2 {{topic_title}}
    - else
      %h2 Known for

    - if profile.tags.all
      %ul.expert-area
        - for tag in profile.tags.all
          %li.tag.label.label-info{data-id:"{{tag.id}}"}
            {{tag}}
            - if user == profile.user
              %i.delete-profile-tag.icon-remove.pull-right{data-id:"{{tag.id}}"}
    - else
      No User Tags

- if user == profile.user
  .row
    .edit-tags
      .span3
        %form.profile-tag-form{action:"/profile/edit/tag/new", method:"POST"}
          - csrf_token
          {{ tag_form.name }}
          %input.btn.btn-warning{type:"submit", value:"Add New Tag"}
