.speaker
  .picture
    - if profile.photo
      %img.pull-left{src:"{{MEDIA_URL}}{{ profile.photo}}"}
    - else
      %i.pull-left.icon-user.photo-placeholder

  .description
    %h4
      %a{href:"{{ profile.get_absolute_url }}"}
        {{ profile.get_full_name }}

    - if profile.tags.all
      Expert In:
      - for tag in profile.tags.all|slice:":5"
        .label.label-info {{tag|title}}

    .about {{ profile.about_me|truncatechars:140 }}

  - with profile as other_user
    - if not user.is_anonymous and user != other_user
      .follow
        - if other_user in user.following.all
          %a.btn.btn-danger{href:"/user/{{other_user.username}}/follow?last={{last}}"} Abandon
        - else
          %a.btn.btn-warning{href:"/user/{{other_user.username}}/follow?last={{last}}"} Follow
