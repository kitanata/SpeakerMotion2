- extends 'base.haml'

- block 'title'
  Featured Events

- block 'subnav'

- block 'content'
  .row
    .event-list
      - for event in events
        .span6
          .event
            .title
              %a{href:"/event/{{event.name}}"}
                {{event.name}}
                %i.icon-bullhorn.pull-right
                  = event.numtalks
            .start-date
              Starting On {{event.earliest_date}} at {{event.earliest_time}}
            .end-date
              Ending On {{event.latest_date}} at {{event.latest_time}}

            - if event.tags
              .tag-area
                - for tag in event.tags
                  .label.label-info
                    %span.count
                      {{tag.0}}
                    %span.name
                      {{tag.1|title}}
