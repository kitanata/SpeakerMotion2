{% verbatim %}
    %script#navbar-templ{type:"text/x-handlebars-template"}
      .row-fluid
        .span3
          %a{href:"/"}
            %img.logo{src:"/static/img/logo.png"}
        .span9
          .row-fluid
            .span12
              %ul.nav.nav-pills.pull-right
                %li
                  %a{href:"/talks"}
                    %i.icon-comments-alt
                    Talks
                %li
                  %a{href:"/speakers"}
                    %i.icon-group
                    Speakers
                %li
                  %a{href:"/events"}
                    %i.icon-calendar
                    Events

                {{#if userLoggedIn}}
                  %li
                    %a#add-talk-navbar
                      %i.icon-plus
                      Add Talk
                {{/if}}

                %li
                  %a.twitter-follow-button{href:"https://twitter.com/SpkrBar", target:"_blank"}
                    %i.icon-twitter
                    Follow Us
                %li
                  %a{href:"/blog"}
                    %i.icon-file-text
                    Blog

                {{#unless userLoggedIn}}
                  %li
                    %a{href:"/login"}
                      %i.icon-signin
                      Login
                  %li
                    %a#register{href:"#"}
                      %i.icon-location-arrow
                      Register
                {{else}}
                  %li.dropdown
                    %a.dropdown-toggle{data-toggle:"dropdown", href:"#"}
                      %i.icon-gear
                      My Account
                      %b.caret

                    %ul.dropdown-menu
                      %li
                        %a{href:"{{profileLink}}"}
                          %i.icon-user
                          My Profile
                      %li
                        %a{href:"/manager"}
                          %i.icon-calendar
                          My Events
                      %li
                        %a{href:"/settings"}
                          %i.icon-gears
                          Settings
                      %li
                        %a{href:"/profile/invite"}
                          %i.icon-mail-forward
                          Invites
                      {{#if userIsStaff}}
                        %li
                          %a{href:"/admin/"}
                            %i.icon-gears
                            Admin
                      {{/if}}
                      %li
                        %a{href:"/logout"}
                          %i.icon-signout
                          Logout
                {{/unless}}
{% endverbatim %}
