.span3
  %li
    %h4
      %a{href:"/talk/{{talk.pk}}"} 
        {{ talk.name|truncatechars:38 }}
    {% if talk.photo %}
      %img{src:"{{STATIC_URL}}img/photo/{{talk.photo}}"}
    {% else %}
      %i.icon-camera.profile-placeholder.pull-left
    {% endif %}

    .abstract {{ talk.abstract|truncatechars:80 }}
